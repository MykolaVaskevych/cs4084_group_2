<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <CheckBox
        android:id="@+id/checkbox_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/text_module_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="CS4084"/>

        <TextView
            android:id="@+id/text_module_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Application Development"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/text_module_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 credits"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_module_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester 1"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/text_module_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • Required"
                android:textSize="12sp"
                android:textColor="#F44336"
                android:visibility="visible"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>